{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "mobile-mcp": {
            "type": "local",
            "enabled": true,
            "command": [
                "npx",
                "-y",
                "@mobilenext/mobile-mcp@latest"
            ]
        },
        "git-mcp": {
            "type": "remote",
            "enabled": true,
            "url": "https://gitmcp.io/{owner}/{repo}",
        },
        "talk-to-figma": {
            "type": "local",
            "enabled": true,
            "command": [
                "bunx",
                "cursor-talk-to-figma-mcp@latest"
            ],
        },
        "docker-mcp": {
            "enabled": true,
            "type": "local",
            "command": [
                "docker",
                "mcp",
                "gateway",
                "run"
            ],
        },
        "dart-mcp": {
            "enabled": true,
            "type": "local",
            "command": [
                "dart",
                "mcp-server"
            ],
        },
        "slang-mcp": {
            "enabled": true,
            "type": "local",
            "command": [
                "slang_mcp"
            ],
        },
    },
}